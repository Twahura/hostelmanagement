<h1>Managers</h1>

<table>
  <thead>
    <tr>
      <th>Hostel</th>
      <th>Manager name</th>
      <th>Manager address</th>
      <th>Manager phone no</th>
      <th>Join date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @managers.each do |manager| %>
      <tr>
        <td><%= manager.hostel %></td>
        <td><%= manager.manager_name %></td>
        <td><%= manager.manager_address %></td>
        <td><%= manager.manager_phone_no %></td>
        <td><%= manager.Join_date %></td>
        <td><%= link_to 'Show', manager %></td>
        <td><%= link_to 'Edit', edit_manager_path(manager) %></td>
        <td><%= link_to 'Destroy', manager, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

