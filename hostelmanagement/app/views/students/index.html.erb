<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th>Seat No</th>
      <th>Student's Name</th>
      <th>Institute</th>
      <th>Year</th>
      <th>Student's phone no</th>
      <th>Address</th>
      <th>Guardian's Name</th>
      <th>Guardian's Phone No</th>
      <th>Rent Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.seat.id %></td>
        <td><%= student.Student_name %></td>
        <td><%= student.Institute %></td>
        <td><%= student.Year %></td>
        <td><%= student.Student_phone_no %></td>
        <td><%= student.Address %></td>
        <td><%= student.Guardians_name %></td>
        <td><%= student.Guardians_phone_no %></td>
        <td><%= student.Rent_date %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="buttons1">
        <button class="button1"><%= link_to "Insert New Student", new_student_path %></button>
        <button class="button2"><%= link_to "Back", after_signin_index_path %></button>
</div>

