<style>
	body{
background:powderblue;	
	font-family: lucida grande,tahoma,verdana,arial,sans-serif;
}
body p{
font-size:0.8em;
line-height:1.28em;
}

h1{

	font-family: cooper black;
	margin-left:500px;
}
table{
		background-color: white;
		font-family: arial;
		border:5px solid black;
		margin-left:30px;
		margin-right:20;
		
		padding:50px;
	}
</style>
<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th>Seat</th>
      <th>Student name</th>
      <th>Institute</th>
      <th>Year</th>
      <th>Student phone no</th>
      <th>Address</th>
      <th>Guardians name</th>
      <th>Guardians phone no</th>
      <th>Rent date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.seat %></td>
        <td><%= student.Student_name %></td>
        <td><%= student.Institute %></td>
        <td><%= student.Year %></td>
        <td><%= student.Student_phone_no %></td>
        <td><%= student.Address %></td>
        <td><%= student.Guardians_name %></td>
        <td><%= student.Guardians_phone_no %></td>
        <td><%= student.Rent_date %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

